<robot name="simple_ball">
  <link name="ball">
	<inertial>
	  <origin xyz="0 0 0" />
	  <mass value=".1" />
	  <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
	</inertial>
	<visual>
	  <origin xyz="0.025 0 0"/>
	  <geometry>
	    <sphere radius = ".025"/>
	  </geometry>
	</visual>
	<collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <sphere radius = ".025" />
      </geometry>
	</collision>
  </link>
  <gazebo reference="my_ball">
    <material>Gazebo/Blue</material>
  </gazebo>
</robot>
